{% extends 'base.html.twig' %}
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <a href="{{ path('addProduct') }}">
                        <button class="btn btn-primary mb-3"><i class="fas fa-plus-square"></i> Добавить поставку</button>
                    </a>
                    <div class="card striped-with-hover">
                        <div class="card-body table-full-width table-responsive">
                            <div class="card-body table-full-width table-responsive">
                                <table class="table table-hover table-striped text-center">
                                    <thead class="text-center">
                                        <th>Отправитель</th>
                                        <th>Получатель</th>
                                        <th>Номер договора</th>
                                        <th>Дата</th>
                                    </thead>
                                    <tbody>
                                        {% for supply in supplies %}
                                            <tr>
                                                <td>{{ supply.sender }}</td>
                                                <td>{{ supply.recipient }}</td>
                                                <td>{{ supply.contract }}</td>
                                                <td>{{ supply.date|date }}</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}