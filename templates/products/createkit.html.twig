{% extends 'base.html.twig' %}
{% block body %}
    <a href="{{ path('products') }}" class="m-3">Назад</a>
    <div id="app">
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-12">
                    {{ form_start(form, {'attr': {'class': 'w-100'}}) }}
                    {{ form_row(form.firstProduct) }}
                    <div class="mt-3 mb-3">
                        {{ form_row(form.article) }}
                    </div>
                    <div class="mt-3 mb-3">
                        {{ form_row(form.price) }}
                    </div>
                    <div class="mt-3 mb-3">
                        {{ form_row(form.quantity) }}
                    </div>
                    <button type="submit" name="submit" class="btn btn-outline-info">Отправить</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
