<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}АБВГД{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
            <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport'>
            <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('assets/chosen/chosen.min.css') }}">
            <link rel="stylesheet" href="{{ asset('/assets/css/light-bootstrap-dashboard.css') }}">
            <link rel="stylesheet" href="{{ asset('/assets/style.css') }}">
        {% endblock %}
    </head>
    <body>
    {% if app.user != null %}
    {% set token = app.user.allegroUserToken %}
    {% endif %}
    <div class="wrapper">
        <div class="sidebar" data-image="../assets/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="{{ path('home') }}" class="simple-text">
                        Система
                    </a>
                </div>
                <ul class="nav">
                    <li>
                        <a class="nav-link" href="{{ path('userprofile') }}">
                            <i class="far fa-user-circle"></i>
                            <p>Профиль</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="#">
                            <i class="fas fa-chart-line"></i>
                            <p>Динамика(в разр.)</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('orders') }}">
                            <i class="fas fa-clipboard-list"></i>
                            <p>Заказы</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('products') }}">
                            <i class="fas fa-box"></i>
                            <p>Склад</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('supplies') }}">
                            <i class="fas fa-truck-loading"></i>
                            <p>Поставки</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('sales') }}">
                            <i class="fas fa-dollar-sign"></i>
                            <p>Продажи</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('handbook') }}">
                            <i class="fas fa-file-alt"></i>
                            <p>Справочник</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('unload') }}">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <p>Выгрузка</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="navbar-nav ml-auto">
                            {% if app.user != null %}
                            <li class="nav-item">
                                <a class="nav-link" href="https://allegro.pl/auth/oauth/authorize?response_type=code&client_id={{ token }}&redirect_uri=https://localhost:8000/allAuth&promt=none">
                                    <span>Авторизоваться</span>
                                </a>
                            </li>
                            {% endif %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('userprofile') }}">
                                    <span class="no-icon">Профиль</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">
                                    <span class="no-icon">Выйти</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="row">
                <div class="col-xl-12">
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% block body %}
        {% endblock %}
        </div>
    </div>
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script src="{{ asset('assets/chosen/chosen.jquery.min.js') }}"></script>
            <script src="https://kit.fontawesome.com/8289a35b8d.js" crossorigin="anonymous"></script>
            <script src="{{ asset('assets/tsort.min.js') }}"></script>
            <script src="{{ asset('assets/myJs/main.js') }}"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
