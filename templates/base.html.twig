<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}АБВГД{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">            <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
            <!--     Fonts and icons     -->
            <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
            <link rel="stylesheet" href="{{ asset('assets/chosen/chosen.min.css') }}">
            <!-- CSS Files -->
            <link href="{{ asset('/assets/css/light-bootstrap-dashboard.css?v=2.0.0') }}" rel="stylesheet" />
            <script src="https://kit.fontawesome.com/8289a35b8d.js" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="{{ asset('/assets/style.css') }}">
        {% endblock %}
    </head>
    <body>
    <div class="wrapper">
        <div class="sidebar" data-image="../assets/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="#" class="simple-text">
                        Система
                    </a>
                </div>
                <ul class="nav">
                    <li>
                        <a class="nav-link" href="{{ path('userprofile') }}">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>Профиль</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="#">
                            <i class="fas fa-chart-line"></i>
                            <p>Динамика(в разр.)</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('orders') }}">
                            <i class="nc-icon nc-notes"></i>
                            <p>Заказы</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('products') }}">
                            <i class="nc-icon nc-app"></i>
                            <p>Склад</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('supplies') }}">
                            <i class="nc-icon nc-delivery-fast"></i>
                            <p>Поставки</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('sales') }}">
                            <i class="fas fa-dollar-sign"></i>
                            <p>Продажи</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('handbook') }}">
                            <i class="fas fa-file-alt"></i>
                            <p>Справочник</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="https://allegro.pl/auth/oauth/authorize?response_type=code&client_id=a95c7c8a0337479daa2813be1f8cb669&redirect_uri=https://localhost:8000/allAuth&promt=none">
                                    <span>Авторизоваться</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('userprofile') }}">
                                    <span class="no-icon">Профиль</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">
                                    <span class="no-icon">Выйти</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% block body %}
        {% endblock %}
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
            <script src="{{ asset('assets/chosen/chosen.jquery.min.js') }}"></script>
            <script src="{{ asset('assets/tsort.min.js') }}"></script>
            <script src="{{ asset('/assets/main.js') }}"></script>
            <script>$( document ).ready(function() {
                    $('.tsort').tsort();
                    $("#search").keyup(function(){
                        _this = this;
                        $.each($("#mytable tbody tr"), function() {
                            if($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) === -1)
                                $(this).hide();
                            else
                                $(this).show();
                        });
                    });
                });
                $(function () {
                    $('.nav [href]').each(function () {
                        if (this.href === window.location.href){
                            $(this).addClass('active')
                        }
                    })
                })
                $(".chosen-select").chosen({max_selected_options: 5});
            </script>
        {% endblock %}
    </body>
</html>
