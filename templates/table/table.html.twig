{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col-xl-12">
                <div class="card shadow">
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                            <th>Артикул</th>
                            {% for profile in profiles %}
                                <th>{{ profile.username }}</th>
                            {% endfor %}
                            </thead>
                            <tbody>
                            {% for product, key in products|keys %}
                                <tr>
                                    <td>{{ key }}</td>
                                    {% for profile in product %}
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}