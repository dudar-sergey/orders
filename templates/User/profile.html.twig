{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="card mt-3">
                    <div class="card-header">
                        <h3>Профиль</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_row(form.username) }}
                        {{ form_row(form.allegroUserToken) }}
                        {{ form_row(form.allegroApplicationToken) }}
                        {{ form_row(form.roles) }}
                        <button type="submit" class="btn btn-outline-secondary mt-3">Обновить</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}