{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="ml-5">
            <div class="row">
                <h3>Группы товаров</h3>
            </div>
            <div class="row ">
                <ul class="list-group">
                    {% for description in descriptions %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ description.enName }}
                            <a href="{{ path('editGroup', {'groupId': description.id}) }}"><span class="badge badge-primary badge-pill ml-5">Изменить</span></a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}