<div class="card-body table-full-width table-responsive">
    <table class="tsort table table-hover table-striped">
        <thead>
        <th scope="col">Изображение</th>
        <th scope="col">Ариткул</th>
        <th scope="col">UPC</th>
        <th scope="col">Название</th>
        <th scope="col" id="price">Стоимость</th>
        <th scope="col" id="quantity">Количество</th>
        <th>Карточка</th>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><img src="{{ product.images.first.url ?? product.allegroImages[0]['url'] ?? 'https://kknd26.ru/images/no_photo.png' }}" width="60" height="40" alt=""></td>
                <td>{{ product.articul }}</td>
                <td>{{ product.upc }}</td>
                <td><a href="{{ path('cardItem', {'itemId': product.id}) }}">{{ product.des.plName ?? product.name }} {{ product.auto ?? '' }}</a></td>
                <td>
                    {{ product.price}}
                </td>
                <td>{{ product.quantity }}</td>
                <td><a href="{{ path('cardItem', {'itemId': product.id}) }}">Карточка</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row justify-content-center">
        <nav>
            <ul class="pagination" id="products-pagination">
                <li class="page-item"><button value="1" class="page-link"><<</button></li>
                {% if currentPage > 2 %}<li class="page-item"><button value="{{ currentPage - 2 }}" class="page-link my-page">{{ currentPage - 2 }}</button></li>{% endif %}
                {% if currentPage > 1 %}<li class="page-item"><button value="{{ currentPage - 1 }}" class="page-link my-page">{{ currentPage - 1 }}</button></li>{% endif %}
                <li class="page-item active"><button value="{{ currentPage }}" class="page-link my-page">{{ currentPage }}</li>
                {% if currentPage < pages %}<li class="page-item"><button value="{{ currentPage + 1 }}" class="page-link my-page">{{ currentPage + 1 }}</button></li>{% endif %}
                {% if currentPage < pages - 1 %}<li class="page-item"><button value="{{ currentPage + 2 }}" class="page-link my-page">{{ currentPage + 2 }}</button></li>{% endif %}
                <li class="page-item"><button value="{{ pages }}" class="page-link">>></button></li>
            </ul>
        </nav>
    </div>
</div>


