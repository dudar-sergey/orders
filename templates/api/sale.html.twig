<div class="container">
    <div class="row mt-3">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table text-left">
                        <thead>
                        <th>Товар</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Остаток</th>
                        </thead>
                        <tbody>
                        {% for orderOffer in sale.order.orderAllegroOffers %}
                            <tr>
                                <td>
                                    {% if orderOffer.allegroOffer %}
                                        <a target="_blank"
                                           href="{{ path('cardItem', {'itemId': orderOffer.allegroOffer.product.id }) }}">{{ orderOffer.allegroOffer.product.name }}</a>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if orderOffer.allegroOffer %}
                                        {{ orderOffer.allegroOffer.product.price }}
                                    {% endif %}
                                </td>
                                <td>{{ orderOffer.quantity }}</td>
                                <td>{{ orderOffer.allegroOffer.product.quantity }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>