{% extends'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col-lg-4">
                <div class="card shadow">
                    <div class="card-header">
                        <h4 class="mt-1 mb-1">Обновить количество товаров</h4>
                    </div>
                    <div class="card-body">
                        <form id="update-quantity-form">
